{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "*.ts",
    "src/index.ts",
    "src/gutenberg.ts",
    "src/opensearch.ts",
    "src/summarize.ts",
    "src/types.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}