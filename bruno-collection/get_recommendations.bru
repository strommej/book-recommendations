meta {
  name: Get Recommendations
  type: graphql
  seq: 2
}

post {
  url: {{gqlEndpoint}}
  body: graphql
  auth: none
}

headers {
  Authorization: {{idToken}}
}

body:graphql {
  query GetRecommendations($input: RecommendationInput!) {
    recommendations(input: $input) {
      id
      title
      summaries
    }
  }
}

body:graphql:vars {
  {
    "input": {
      "bookIds": ["15399"],
      "limit": 10
    }
  }
}
