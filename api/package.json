{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "test": "vitest",
    "dev": "npm run codegen && tsx watch -r dotenv/config src/server/devServer.ts",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "compile": "tsc && tsc-alias",
    "package": "cp package.json dist/ && cp -R src/schema dist/ && cd dist && npm install --omit=dev && cd .. && cp -R dist/node_modules dist/",
    "build": "npm run codegen && npm run compile && npm run package"
  },
  "keywords": [],
