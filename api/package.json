    "@types/node": "^24.5.2",
    "biome": "^0.3.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
