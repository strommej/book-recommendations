{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "vars": [
        "./src/config/vars.ts"
      ],
      "types": [
        "./src/types/types.ts"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}