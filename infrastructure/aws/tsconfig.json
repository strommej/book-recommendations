{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": [
      "node"
    ]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}